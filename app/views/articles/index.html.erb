<h1>Articles Listing Page</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @articles.each do |article| %>
			<tr>
				<td><%= article.title %></td>
				<td><%= article.description %></td>
				<td><%= link_to 'Show', article_path(article.id) %></td>
				<td><%= link_to 'Edit', edit_article_path(article.id) %></td>
				<td><%= link_to 'Delete', article_path(article.id), method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>